rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is the owner
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users collection - users can read/write their own profile
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      
      // Allow reading other users' public profile data
      allow read: if isAuthenticated();
      
      // Course progress subcollection
      match /courseProgress/{progressId} {
        allow read, write: if isOwner(userId);
      }
      
      // Certificates subcollection
      match /certificates/{certificateId} {
        allow read, write: if isOwner(userId);
      }
    }

    // Posts collection - authenticated users can read, only creators can write
    match /posts/{postId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && 
                     request.resource.data.userId == request.auth.uid &&
                     request.resource.data.authorId == request.auth.uid;
      allow update, delete: if isAuthenticated() && 
                             resource.data.userId == request.auth.uid;
      
      // Comments subcollection
      match /comments/{commentId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated() && 
                       request.resource.data.authorId == request.auth.uid;
        allow update, delete: if isAuthenticated() && 
                               resource.data.authorId == request.auth.uid;
      }
    }

    // Events collection - authenticated users can read, only creators can write
    match /events/{eventId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && 
                     request.resource.data.creatorId == request.auth.uid;
      allow update, delete: if isAuthenticated() && 
                            resource.data.creatorId == request.auth.uid;
      
      // Allow updating attendees array (for RSVP)
      allow update: if isAuthenticated() && 
                     request.resource.data.diff(resource.data).affectedKeys().hasOnly(['attendees']);
    }

    // Chat Rooms collection
    match /chatRooms/{roomId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && 
                     request.resource.data.createdBy == request.auth.uid;
      allow update: if isAuthenticated() && 
                    (resource.data.createdBy == request.auth.uid ||
                     request.resource.data.diff(resource.data).affectedKeys().hasOnly(['memberCount', 'members']));
      allow delete: if isAuthenticated() && 
                     resource.data.createdBy == request.auth.uid;
      
      // Messages subcollection
      match /messages/{messageId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated() && 
                       request.resource.data.senderId == request.auth.uid;
        allow update, delete: if isAuthenticated() && 
                               resource.data.senderId == request.auth.uid;
      }
    }

    // Courses collection
    match /courses/{courseId} {
      allow read: if isAuthenticated();
      // Only admins can create/update/delete courses (you can add admin check here)
      allow create, update, delete: if isAuthenticated();
      // For now, allow authenticated users to create courses
      // In production, add admin role check: request.auth.token.admin == true
    }
  }
}

